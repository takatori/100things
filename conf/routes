# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /users                      com.takatori.hundredthings.controllers.UserController.fetchAll()
GET     /users/:user_id             com.takatori.hundredthings.controllers.UserController.fetch(user_id: Int)
POST    /users                      com.takatori.hundredthings.controllers.UserController.create()
PUT     /users/:user_id             com.takatori.hundredthings.controllers.UserController.update(user_id: Int)
DELETE  /users/:user_id             com.takatori.hundredthings.controllers.UserController.delete(user_id: Int)

# Map static resources from the /public folder to the /assets URL path
#GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
